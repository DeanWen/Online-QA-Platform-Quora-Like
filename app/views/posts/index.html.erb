<head>
  <div align="center">
    <legend>Disscusion Board</legend>
  </div>

  <div align = "center">    
    <%= link_to 'My Post',user_posts_path(current_user), class: "btn btn-small btn-warning"%>
    <%= link_to 'New', new_post_path, class: "btn btn-small btn-success"%>
    <%= link_to 'All Post',posts_path, class: "btn btn-small btn-info"%>
  </div>
</head>

<body>

    <% @posts.order("created_at DESC").each do |post| %>
      <tr>
        
          <td>
            <!--<h3><%= post.title %></h3>-->
            <h3><%= link_to post.title, post %></h3> 
          </td>

          <td>
            <small> 
              -- <b><%= post.name %></b> 
              Create at <%= post.created_at.to_s(:db) %>
             </small>
          </td>
          <br>
          <br>
          <div id="pcontent">
          <td><%= simple_format(post.content)%></td>
          </div>
          
        
        <br>
        <div align = "right">
            <%= link_to 'Read More...', post , class: "btn btn-mini btn-info" %> 
            <%if current_user == post.user %>       
              <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-mini btn-warning" %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-mini btn-danger"%></td>
            <%end%>
        </div>
        <br>
      </tr>
    <% end %>
<body>

