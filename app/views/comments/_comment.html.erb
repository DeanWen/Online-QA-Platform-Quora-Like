<p>
  <b>Commenter:</b>
  <%= comment.commenter %>
</p>
 
<p>
  <b>Comment:</b>
  <%= simple_format(comment.body)%>
</p>
 

<% if comment.user == current_user %>
<div align="right">
  <%= link_to 'Destroy', [comment.post, comment],
               :confirm => 'Are you sure?',
               :method => :delete ,class: "btn btn-mini btn-danger"%>
</div>
<% end %>